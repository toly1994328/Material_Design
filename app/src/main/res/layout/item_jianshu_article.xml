<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginBottom="@dimen/dp_16">

    <android.support.constraint.ConstraintLayout
        android:layout_width="@dimen/item_txt_max_width"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/id_item_article_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.3 13:08"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/id_item_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_item_article_time"
            android:layout_marginTop="@dimen/dp_4"
            android:text="理一理屏幕尺寸那些事"
            android:textSize="@dimen/sp_16"
            app:layout_constraintTop_toBottomOf="@+id/id_item_article_time"/>

        <include layout="@layout/in_item_jianshu_bottom"/>

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/item_iv_size"
        android:layout_height="@dimen/item_iv_size"
        android:layout_marginEnd="@dimen/dp_20"
        android:scaleType="centerCrop"
        android:src="@mipmap/menu_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>

